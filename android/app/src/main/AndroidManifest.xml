<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
  
  <!-- Location - REQUIRED for Geolocation and BLE on Android <12 -->
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

  <!-- BLE (Android 12+) -->
  <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />
  <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
  <!-- Add if you advertise -->
  <!-- <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" /> -->

  <!-- Camera & audio for VisionCamera -->
  <uses-permission android:name="android.permission.CAMERA" />
  <uses-permission android:name="android.permission.RECORD_AUDIO" />

  <!-- Network (if you call APIs) -->
  <uses-permission android:name="android.permission.INTERNET" />

  <!-- Optional; only if you actually need SYSTEM_ALERT_WINDOW -->
  <!-- <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/> -->

  <!-- Optional; remove if not needed -->
  <!-- <uses-permission android:name="android.permission.VIBRATE"/> -->

  <!-- Hardware declarations -->
  <uses-feature android:name="android.hardware.bluetooth_le" android:required="true"/>
  <uses-feature android:name="android.hardware.bluetooth" android:required="true"/>
  <!-- Be lenient on camera so Play allows install on devices without a back camera -->
  <uses-feature android:name="android.hardware.camera.any" android:required="false" />

  <!-- Package visibility (not strictly needed just to open https links) -->
  <!--
  <queries>
    <intent>
      <action android:name="android.intent.action.VIEW"/>
      <category android:name="android.intent.category.BROWSABLE"/>
      <data android:scheme="https"/>
    </intent>
  </queries>
  -->

  <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:roundIcon="@mipmap/ic_launcher_round"
      android:allowBackup="true"
      android:theme="@style/AppTheme"
      android:supportsRtl="true"
      android:enableOnBackInvokedCallback="false">

    <!-- Disable Expo Updates in bare builds (keep consistent) -->
    <meta-data android:name="expo.modules.updates.ENABLED" android:value="false"/>
    <meta-data android:name="expo.modules.updates.EXPO_UPDATES_CHECK_ON_LAUNCH" android:value="NEVER"/>
    <meta-data android:name="expo.modules.updates.EXPO_UPDATES_LAUNCH_WAIT_MS" android:value="0"/>

    <activity
        android:name=".MainActivity"
        android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|uiMode"
        android:launchMode="singleTask"
        android:windowSoftInputMode="adjustResize"
        android:theme="@style/Theme.App.SplashScreen"
        android:exported="true"
        android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>

      <!-- Deep links (keep if you use them) -->
      <intent-filter>
        <action android:name="android.intent.action.VIEW"/>
        <category android:name="android.intent.category.DEFAULT"/>
        <category android:name="android.intent.category.BROWSABLE"/>
        <data android:scheme="thinxlog"/>
        <data android:scheme="exp+my-expo-app"/>
      </intent-filter>
    </activity>
  </application>
</manifest>
